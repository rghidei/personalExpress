<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Flowers</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body id="mainBody">
<section id="main">
  <section id="one">
  <h3 id="post">Posts</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li id="list" class="shadow-lg p-3 mb-5 bg-body rounded" class="message">
      <span><%= messages[i].name %></span>
      <img src="<%= messages[i].img %>" alt="pic">
      <span class="icon"><%= messages[i].heart %></span>
      <span class="icon"><i class="fa fa-heart" aria-hidden="true"></i></span>
      <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  </section>

  <section id="two">
    <h2 id="post">Add A Post</h2>
    <section id="three">
      <form action="/up" method="POST" enctype='multipart/form-data'>
        <input type="text" class="form-control" id="formText" placeholder="Name" aria-label="default input example" name="name">
        <div class="mb-3">
          <input type="file" placeholder="" name="file" class="form-control file" id="formFile">
        </div>
        <button type="submit" value="Upload" >Submit</button>
      </form>
    </section>

  </section>
</section>



  <script src="main.js"></script>

</body>
</html>
